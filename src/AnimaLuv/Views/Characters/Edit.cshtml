@model AnimaLuv.Models.Character

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<form asp-action="Edit">
    <div class="form-horizontal">
        <h4>Character</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="ID" />
        <div class="form-group">
            <label asp-for="Name" class="col-md-2 control-label">Name your fuzzy friend!</label>
            <div class="col-md-10">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Color" class="col-md-2 control-label">What color is your fuzzy friend?</label>
            <div class="col-md-10">
                <input asp-for="Color" class="form-control" />
                <span asp-validation-for="Color" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Outfit" class="col-md-2 control-label">Dress your fuzzy friend!</label>
            <div class="col-md-10">
                <input asp-for="Outfit" class="form-control" />
                <span asp-validation-for="Outfit" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Size" class="col-md-2 control-label">How big do you want your friend?</label>
            <div class="col-md-10">
                <input asp-for="Size" class="form-control" />
                <span asp-validation-for="Size" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Type" class="col-md-2 control-label">What kind of animal is your fuzzy friend?</label>
            <div class="col-md-10">
                <input asp-for="Type" class="form-control" />
                <span asp-validation-for="Type" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="stuffingMaterial" class="col-md-2 control-label">What do you wish to stuff your friend with?</label>
            <div class="col-md-10">
                <input asp-for="stuffingMaterial" class="form-control" />
                <span asp-validation-for="stuffingMaterial" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="stuffingLevel" class="col-md-2 control-label">How stuffed should your friend be?</label>
            <div class="col-md-10">
                <input asp-for="stuffingLevel" class="form-control" />
                <span asp-validation-for="stuffingLevel" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
